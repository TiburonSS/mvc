				{name: 'myac', width:60, fixed:true, sortable:false, search:false,
				resize:false, formatter:'actions',
				formatoptions:{keys:true,delOptions:{reloadAfterSubmit:false}}
				}
				],
				cmTemplate: {sortable:false},
				rowList: [],
				pgbuttons: false,
				pgtext: null,
				viewrecords: false,
				pager:'#le_tablePager',
				height:'auto',
				shrinkToFit: false
				}).navGrid('#le_tablePager',{edit:true, add:true, del:true, search:false},{closeAfterEdit: true},{closeAfterAdd:true});