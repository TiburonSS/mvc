.row(style="padding-left:5px;")
		table#le_table
		div#le_tablePager
		div#le_tableNavigator
	script(type='text/javascript').
		$(function(){
			var grid=$("#le_table" ) //находим элемент крепления для грида
			, bar= le_tablePager
			, navig= le_tableNavigator;
			});
			$("#le_table").jqGrid({
				url:"/get_ls_boln",
				mtype: 'POST',
				datatype: 'JSON',
				postData:{tabn:"#{tabn}",dn:"#{boln_dn}",dk:"#{boln_dk}"},
				colNames:['Дата лікарняного','Номер листка','Дата початку','Дата закінчення','Діагноз',''],
				colModel :[
				{name:'databol', index:'databol', width:75,editable:true,formatter: 'date', formatoptions: { srcformat: 'ISO8601Long', newformat: 'd.m.Y'}},
				{name:'nomer', index:'nomer', width:70,editable:true},
				{name:'datan', index:'datan', width:75,editable:true,formatter: 'date', formatoptions: { srcformat: 'ISO8601Long', newformat: 'd.m.Y'}},
