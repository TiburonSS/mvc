.col-xs-4(style="border-right:1px dashed gray;min-height:520px;min-width:410px;padding-left:1px;padding-right:1px;")
	.row(style="background-color:#F6F4E3;")
		h5(align="left",style="font-weight:bold;padding-left:55px;") Персональні дані співробітника
	.row
		each item in pers
			table#pers(border="1", style="margin-left:10px;")
				tr
					td.n(width="80") Таб. №
					td(width="290")= item.tabn
				tr
					td.n ПІБ
					td(style="font-weight:bold;")= item.fio_f
				tr
					td.n Ідент код
					td= item.idkod
	.row
		button#go-to-employees(style="margin-left:20px;") 
			img(src="/img/find32.png")
	script(src="/sc/go_to_employees.js")
	.row(style="background-color:#F6F4E3;")
		h6(align="left",style="font-weight:bold;padding-left:20px;") Дані про роботу за період з #{rabota_dn} по #{rabota_dk}
	.row
		if rabota.length == 0
			p(align="left", style="color:#F01919;padding-left:30px;font-weight:bold;") В даний період співробітник не працював!
		else 
			table#table-rabota(border="1", style="font-size:11px;margin-left:10px;")
				thead
					tr
						td(width="60", align="center", style="min-width:60px;") Дата з
						td(width="60", align="center", style="min-width:60px;") Дата по
						td(width="40", align="center", style="min-width:40px;") Код</br>роботи
						td(width="180", align="center", style="min-width:180px;") Посада
						td(width="30", align="center", style="min-width:30px;") Коеф
				tbody#table-rabota-body
					each item in rabota
						tr
							td(width="60")= moment(item.datan).format("DD.MM.YYYY")
							td(width="60")= moment(item.datak).format("DD.MM.YYYY")
							td(width="40")= item.rabota
							td(width="180")= item.naimenovanie
							td(width="30")= item.kd
.col-xs-6#boln(style="padding-left:1px;padding-right:1px;")
	.row(align="left", style="background-color:#F6F4E3;")
		h5(align="center", style="font-weight:bold;") Лікарняні листки за період з #{boln_dn} по #{boln_dk}
	script(src="/sc/grid.locale-ua.js")
	script(src="/sc/jquery.jqGrid.min.js")
	.row(style="padding-left:15px;")
		table#le_table
		div#le_tablePager
		div#le_tableNavigator
	script(type='text/javascript').
		$(function(){
			var grid=$("#le_table" ) //находим элемент крепления для грида
			, bar= le_tablePager
			, navig= le_tableNavigator;
			});
			$("#le_table").jqGrid({
				url:"/get_ls_boln",
				mtype: 'POST',
				datatype: 'JSON',
				postData:{tabn:"#{tabn}",dn:"#{boln_dn}",dk:"#{boln_dk}"},
				colNames:['Дата лікарняного','Номер листка','Дата початку','Дата закінчення','Діагноз'],
				colModel :[
				{name:'databol', index:'databol', width:80,editable:false,formatter: 'date', formatoptions: { srcformat: 'ISO8601Long', newformat: 'd.m.Y'}},
				{name:'nomer', index:'nomer', width:80,editable:false},
				{name:'datan', index:'datan', width:80,editable:false,formatter: 'date', formatoptions: { srcformat: 'ISO8601Long', newformat: 'd.m.Y'}},
				{name:'datak', index:'datak', width:80,editable:false,formatter: 'date', formatoptions: { srcformat: 'ISO8601Long', newformat: 'd.m.Y'}},
				{name:'diagnoz', index:'diagnoz', width:180,editable:false},
				],
				cmTemplate: {sortable:false},
				viewrecords: true,
				pager:'#le_tablePager',
				height:'auto',
				shrinkToFit: false
				}).navGrid('#le_tablePager',{edit:true, add:true, del:true, search:false},{closeAfterEdit: true},{closeAfterAdd:true}); 	
